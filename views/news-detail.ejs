            <!-- Container -->
            <main id="container" role="main">
                <!-- Content -->
                <div id="content">
                    <!-- Page title -->
                    <section class="page-title">
                        <div class="page-title__content">
                            <div class="container">
                                <h2 class="page-title__name"><%= post.title%></h2>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb__item"><a href="/" class="breadcrumb__link">Home</a></li>
                                    <li class="breadcrumb__item"><a href="/news-list" class="breadcrumb__link"><%= post.type%></a></li>
                                </ul>
                            </div>
